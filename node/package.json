{
  "name": "opentutor-dialog",
  "version": "1.0.0",
  "description": "open-tutor project backend setup",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.{js,jsx,json,ts,tsx}'",
    "lint:fix": "eslint src --ext ts --ext js --fix",
    "start:dev": "export NODE_PATH=$(pwd)/src && export NODE_ENV=dev && export ENV=dev && ts-node src/server.ts",
    "test": "export ENV=test && export NODE_ENV=test && npx mocha -r tsconfig-paths/register -r ts-node/register -r source-map-support/register './src/test/**/*.{spec,test}.{js,ts}' --timeout 5000 --full-trace --recursive --reporter spec",
    "test:all": "npm run test:format && npm run test:lint && npm run test:audit && npm run test:types && npm test",
    "test:audit": "npm audit --audit-level=moderate --production",
    "test:format": "prettier --check '**/*.{js,jsx,json,ts,tsx}'",
    "test:lint": "eslint src --ext ts --ext js",
    "test:types": "tsc --noEmit"
  },
  "author": "CVM",
  "license": "ISC",
  "dependencies": {
    "@types/uuid": "^8.0.0",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "longjohn": "^0.2.12",
    "morgan": "^1.10.0",
    "uuid": "^8.1.0",
    "winston": "^3.2.1",
    "yn": "^4.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/chai": "^4.2.11",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/crypto-js": "^3.1.47",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.13.12",
    "@types/sinon": "^7.5.2",
    "@types/sinon-chai": "^3.2.4",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "axios-mock-adapter": "^1.18.1",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^7.2.0",
    "mocha-logger": "^1.0.6",
    "mocha-prepare": "^0.1.0",
    "prettier": "^1.19.1",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.5.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2",
    "ts-sinon": "^1.2.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  }
}
